<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModels="clr-namespace:WindowApplication.ViewModels" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Class="WindowApplication.Views.MainWindow"
        Title="MainWindow" Height="350" Width="581" WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="499*"/>
			<ColumnDefinition Width="74*"/>
		</Grid.ColumnDefinitions>
		<Grid.DataContext>
			<ViewModels:RenderViewModel/>
		</Grid.DataContext>
		<Image Source="{Binding RenderBitmap}"/>
		<Button Content="Render" VerticalAlignment="Bottom" Width="54" Grid.Column="1" Margin="10,0,10,10" Height="22">
			<i:Interaction.Triggers>
				<i:EventTrigger EventName="Click">
					<ei:CallMethodAction TargetObject="{Binding Mode=OneWay}" MethodName="UpdateImage"/>
				</i:EventTrigger>
			</i:Interaction.Triggers>
		</Button>
	</Grid>
</Window>
